<% provide(:title, 'All skills') %>
<h1>All available skills</h1>

<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4 list-group">
      <%= render @skills %>
    </div>

    <%= will_paginate %>
  </div>

  <% if current_user.admin? %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-right">
        <%= link_to 'Define new skill', new_skill_path, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
