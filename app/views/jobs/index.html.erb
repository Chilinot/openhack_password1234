<% provide(:title, 'All jobs') %>
<h1>Available jobs</h1>

<div class="container">

  <div class="col-md-4">

    <div class="row btn-group" data-toggle="buttons">
      <% Skill.all.each do |skill| %>
        <button class="btn btn-default">
          <%= image_tag skill.image(:thumb) %>
        </button>
      <% end %>
    </div>

    <div class="row">
      <button class="btn btn-primary btn-success">Search</button>
      <% if current_user.admin? or current_user.employer? %>
        <%= link_to 'Create new job posting', new_job_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <div class="col-md-8">
    <div class="list-group">
      <%= render @jobs %>
    </div>

    <%= will_paginate %>
  </div>
</div>
