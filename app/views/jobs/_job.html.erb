<a href="<%= job_path(job) %>" class="list-group-item">
  <h4 class="list-group-item-heading"><%= job.title %></h4>
  <p class="list-group-item-text">
    <%= truncate job.description.html_safe, length: 100 %>
  </p>
  <div class="list-group-item-text" style="margin-top: 1em;">
    <% job.skills.each do |skill| %>
      <%= image_tag skill.image(:thumb) %> (<b><%= JobSkill.skill_level(job, skill) %></b>)
    <% end %>
  </div>
</a>
